<Window x:Class="Calc.MVVM.Views.BuilderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc.MVVM.ViewModels"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:views="clr-namespace:Calc.MVVM.Views"
        d:DataContext="{d:DesignInstance Type=local:BuilderViewModel}"
        Loaded="WindowLoaded"
        Closing="WindowClosing"
        mc:Ignorable="d"
        Height="800" MinHeight="700"
        Width="900" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/CalcMVVM;component/Resources/icon-01.png"
        Title="CALC BUILDER"
        Topmost="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MainViewResources.xaml"/>
                <ResourceDictionary Source="ToggleButtonResource.xaml"/>
                <ResourceDictionary Source="ButtonResource.xaml"/>
                <ResourceDictionary Source="ComboBoxResource.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="MainGrid">

        <Grid x:Name="BuilderGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="85"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Label Content="Revit Elements"
                    FontSize="27"
                    Margin="5,5,0,0"
                    FontWeight="light"/>

            <Grid x:Name="TreeviewGrid"
                      Grid.Column="0"
                      Grid.Row="1"
                      Grid.RowSpan="5"
                      Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding BuildupCreationVM.MainWarning}"
                           d:Text="Choose a type and set one amount as normalizer."
                           Grid.ColumnSpan="5"
                           Grid.Row="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Foreground="Crimson"
                           FontWeight="SemiBold"
                           FontSize="10"/>

                <Button Content="Select"
                            Style="{StaticResource ButtonStyle}"
                            Grid.Column="0"
                            Grid.Row="0"
                            Width="60"
                            Height="40"
                            HorizontalAlignment="Left"
                            Click="SelectClicked"/>


                <Border Grid.ColumnSpan="4" Grid.Column="1" Grid.Row="0"
                            BorderThickness="0" 
                            CornerRadius="4"
                            d:Background="LightGray"
                            Background="{Binding BuildupCreationVM.CurrentColor, Converter={StaticResource ColorConverter}}"/>

                <Grid Grid.Column="1"
                      DataContext="{Binding BuildupCreationVM.AmountsModel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Tag="Count"
                            DataContext="{Binding CountAmount}"
                            Grid.Column="0"
                            Click="AmountClicked"
                            Style="{StaticResource UnitButtonStyle}"/>

                    <Button Tag="Length"
                            DataContext="{Binding LengthAmount}"
                            Grid.Column="1"
                            Click="AmountClicked"
                            Style="{StaticResource UnitButtonStyle}"/>

                    <Button Tag="Area"
                            DataContext="{Binding AreaAmount}"
                            Grid.Column="2"
                            Click="AmountClicked"
                            Style="{StaticResource UnitButtonStyle}"/>

                    <Button Tag="Volume"
                            DataContext="{Binding VolumeAmount}"
                            Grid.Column="3"
                            Click="AmountClicked"
                            Style="{StaticResource UnitButtonStyle}"/>
                </Grid>

                <Border x:Name="TreeViewBorder"
                            Grid.Row="2"
                            Grid.ColumnSpan="5"
                            BorderBrush="Silver"
                            BorderThickness="1"
                            CornerRadius="4">
                    <TreeView x:Name="TreeView"
                            Background="Transparent"
                            BorderThickness="0"
                            AllowDrop="True"
                            MouseLeftButtonDown="SideClickDown"
                              MouseDoubleClick="TreeViewDoubleClick"
                            MouseMove="TreeViewMouseMove"
                            DragOver="TreeViewDragOver"
                            Drop="TreeViewDrop"
                            ItemsSource="{Binding BuildupCreationVM.BuildupComponents}"
                            TreeViewItem.Selected="TreeViewItemSelected"
                            ItemContainerStyle="{StaticResource TreeViewItemStyle}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding LayerComponents}">
                                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource LayerItemTemplate}">
                                    <ContentControl.ToolTip>
                                        <TextBlock Text="{Binding Title}"/>
                                    </ContentControl.ToolTip>
                                </ContentControl>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Border>
            </Grid>



            <Label Content="Buildup Settings" 
                Grid.Column="2"
                Grid.Row="0"
                FontSize="27"
                Margin="5,5,0,0"
                FontWeight="light"/>

            <Grid x:Name="BuildupInfoGrid"
                    Grid.Column="2" 
                    Grid.Row="1"
                    Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <ComboBox   x:Name="StandardComboBox"
                            Text="Standard"
                            Grid.Row="0"
                            Grid.Column="0"
                            ItemsSource="{Binding BuildupCreationVM.StandardsAll}"
                            SelectedItem="{Binding BuildupCreationVM.SelectedStandard}"
                            Style="{StaticResource RoundedComboBoxStyle}"
                            DisplayMemberPath="Name"/>

                <ComboBox   x:Name="BuildupGroupComboBox"
                            Text = "Buildup Group"
                            Grid.Row="1"
                            Grid.Column="0"
                            ItemsSource="{Binding BuildupCreationVM.BuildupGroupsAll}"
                            SelectedItem="{Binding BuildupCreationVM.SelectedBuildupGroup}"
                            Style="{StaticResource RoundedComboBoxStyle}"
                            DisplayMemberPath="Name"/>

                <ComboBox   x:Name="BuildupUnitComboBox"
                            Text="Buildup Unit"
                            Grid.Row="2"
                            Grid.Column="0"
                            ItemsSource="{Binding BuildupCreationVM.BuildupUnitsAll}"
                            SelectedItem="{Binding BuildupCreationVM.SelectedBuildupUnit}"
                            Style="{StaticResource RoundedComboBoxStyle}"/>



                <TextBox x:Name="BuildupNameTextBox"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Height="25"
                        Margin="5,0,0,0"
                        d:Text="test name"
                        Style="{StaticResource TextBoxStyle}"
                        FontWeight="SemiBold"
                        TextChanged="BuildupNameTextChanged"/>

                <TextBox x:Name="DescriptionTextBox"
                        Grid.Column="1"
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Margin="5,5,0,0"
                        d:Text="Buildings, infrastructures, and devices for generating, distributing, a!"
                        Style="{StaticResource TextBoxStyle}"
                        TextWrapping="Wrap"
                        Height="55"
                        Text="{Binding BuildupCreationVM.NewBuildupDescription}"/>
                
                <Border  Grid.Column="2"
                         Grid.Row="1"
                         Grid.RowSpan="2"
                         Height="55"
                         Margin="5,5,0,0"
                         BorderBrush="Silver"
                         BorderThickness="1"
                         Background="WhiteSmoke"
                         MouseLeftButtonDown="OnCaputureClicked"
                         MouseEnter="CaptureMouseEnter"
                         MouseLeave="CaptureMouseLeave"
                         MouseMove="CaptureMouseMove"
                         CornerRadius="4">
                    <Grid>
                        <Image x:Name="ImagePreview" 
                                Source="{Binding BuildupCreationVM.CurrentImage}"/>
                        <TextBlock x:Name="CaptureTextBlock"
                                   Text="{Binding BuildupCreationVM.CaptureText}"
                                   d:Text="↻"
                                   Foreground="Gray"
                                   FontSize="20"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Popup x:Name="ImagePreviewPopup" AllowsTransparency="True">
                    <Border BorderThickness="0" Background="Transparent" CornerRadius="4">
                        <Image Source="{Binding BuildupCreationVM.CurrentImage}" Width="500" Height="400"/>
                    </Border>
                </Popup>

            </Grid>


            <Label Content="Materials"
                       Grid.Column="2"
                       Grid.Row="2"
                       Margin="5,5,0,0"
                       FontSize="27"
                       FontWeight="Light"/>

            <Border  x:Name="MaterialSection"
                     Grid.Column="2"
                     Grid.Row="3"
                     Margin="10,0,10,0"
                     CornerRadius="4"
                     d:Background="LightGray"
                     Background="{Binding BuildupCreationVM.CurrentColor, Converter={StaticResource ColorConverter}}">

                <Grid x:Name="MaterialGrid"
                      Margin="10"
                      DataContext="{Binding BuildupCreationVM.CurrentLayerMaterialModel}"
                      IsEnabled="{Binding IsEnabled}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ComboBox   x:Name="MaterialFunctionComboBox"
                            Text="Material Function"
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Margin="5,0,0,0"
                            ItemsSource="{Binding MaterialFunctionsAll}"
                            SelectedItem="{Binding SelectedFunction}"
                            Style="{StaticResource RoundedComboBoxStyle}"/>

                    <views:SearchComboBox Tag="1"
                      x:Uid="ShowTextNote"
                      Grid.Column="0"
                      Grid.Row="0"
                      Style="{StaticResource RoundedComboBoxStyle}"
                      ItemsSource="{Binding AllMaterialsView1}"
                      SelectedItem="{Binding MainMaterial}"
                      DisplayMemberPath="Name"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Top">
                        <ComboBox.GroupStyle>
                            <StaticResource ResourceKey="ComboBoxGroupStyle"/>
                        </ComboBox.GroupStyle>
                    </views:SearchComboBox>

                    <views:SearchComboBox Tag="2"
                      x:Uid="ShowTextNote"
                      Grid.Column="0"
                      Grid.Row="1"
                      Margin="0,5,0,0"
                      Style="{StaticResource RoundedComboBoxStyle}"
                      ItemsSource="{Binding AllMaterialsView2}"
                      SelectedItem="{Binding SubMaterial}"
                      DisplayMemberPath="Name"
                      IsEnabled="{Binding CanAddSecondMaterial}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Top">
                        <ComboBox.GroupStyle>
                            <StaticResource ResourceKey="ComboBoxGroupStyle"/>
                        </ComboBox.GroupStyle>
                    </views:SearchComboBox>

                    <TextBlock Text="{Binding MaterialMatchInfo}"
                               d:Text="Material units don't match."
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Right"
                               Grid.Column="0"
                               Grid.Row="2"
                               Margin="5,0,0,0"
                               Foreground="Crimson"
                               FontWeight="SemiBold"
                               FontSize="10"/>

                    <Button Content="Reduce"
                            Grid.Column="2"
                            Grid.Row="1"
                            Margin="2.5,0,0,0"
                           Style="{StaticResource ButtonStyle}"
                            Click="ReduceClicked"/>

                        <TextBox x:Name="RatioTextBox"
                                 Grid.Column="1"
                                 Grid.Row="1"
                                 Margin="5,0,2.5,0"
                                 Height="25"
                                 Text="{Binding SubMaterialRatio}"
                                 Style="{StaticResource TextBoxStyle}"/>
                   
                    <Grid   x:Name="MaterialTabsGrid"
                        Grid.ColumnSpan="3"
                        Grid.Row="4"
                        DockPanel.Dock="Top">
                        <Border Margin="0,21,0,0"
                                BorderBrush="Silver"
                                Background="White"
                                BorderThickness="1,1,1,1"
                                CornerRadius="4"/>
                        <TabControl x:Name="MaterialTabs"
                            BorderThickness="0"
                            Background="Transparent"
                            ItemsSource="{Binding CurrentMaterials}"
                            SelectedItem="{Binding ActiveMaterial}"
                            ItemContainerStyle="{StaticResource TabItemStyle}">
                            <TabControl.ContentTemplate>
                                <DataTemplate>

                                    <Grid Margin="10,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="15"/>
                                            <RowDefinition Height="15"/>
                                            <RowDefinition Height="15"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="Material Group"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                               Text="{Binding GroupName}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="Material Unit: "/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                               Text="{Binding  MaterialUnit}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   FontWeight="SemiBold"
                                                   Text="Thickness"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                                   Text="{Binding  Thickness}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="2"
                                              FontWeight="SemiBold"
                                              Text="GWP (kgCO2eq)"/>
                                        <TextBlock Grid.Row="0" Grid.Column="3"
                                              Text="{Binding Gwp}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="2"
                                              FontWeight="SemiBold"
                                              Text="GE (kWhOileq)"/>
                                        <TextBlock Grid.Row="1" Grid.Column="3"
                                              Text="{Binding Ge}"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0"
                                               FontWeight="SemiBold"
                                               Text="Description"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"
                                               Text="{Binding  Description}" TextWrapping="Wrap"/>
                                    </Grid>

                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </Grid>
                </Grid>
            </Border>

            <Label Content="Buildup Preview"
                   Grid.Row="4"
                   Grid.Column="2"
                   Margin="5,5,0,0"
                   FontSize="27"
                   FontWeight="Light"/>

            <Grid x:Name="BuildupPreviewGrid"
                     Margin="10,0,10,0"
                     Grid.Row="5" 
                     Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="18"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock d:Text="This is a Buildup name"
                           Grid.RowSpan="2"
                            FontSize="16"
                            FontWeight="SemiBold"
                            VerticalAlignment="Top"
                            Text="{Binding BuildupCreationVM.NewBuildupName}"/>

                <TextBlock Grid.Column="1" Text="Total GWP: " VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="2" VerticalAlignment="Center" d:Text="177.902">
                    <TextBlock.Text>
                        <Binding Path="BuildupCreationVM.BuildupGwp"/>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Grid.Column="1" Grid.Row="1" Text="Total GE: " VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"  d:Text="1312.902">
                    <TextBlock.Text>
                        <Binding Path="BuildupCreationVM.BuildupGe"/>
                    </TextBlock.Text>
                </TextBlock>

                <Border x:Name="PreviewCalculation"
                        BorderBrush="Silver"
                        BorderThickness="1"
                        Grid.Row="2"
                        Grid.ColumnSpan="3"
                        CornerRadius="4">
                    <DataGrid x:Name="Calculations"
                              Style="{StaticResource DataGridStyle}"
                              ItemsSource="{Binding BuildupCreationVM.AllCalculationComponents}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="" Width="20">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="■" FontSize="16" Padding="0,-2,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock.Foreground>
                                                <Binding Path="HslColor" Converter="{StaticResource ColorConverter}"/>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Material" Binding="{Binding Material.Name}" Width="3*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Function" Binding="{Binding Function}" Width="*" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="Amount" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Amount"/>
                                                    <Binding Path="Material.MaterialUnit"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="GWP" Binding="{Binding Gwp}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="GE" Binding="{Binding Ge}" Width="*" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <Grid  x:Name="SaveButtonGrid"
                    Grid.Column="2"
                    Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Content="Save Buildup"
                        Click="SaveBuildupClicked"
                        Style="{StaticResource ButtonStyle}"
                        Grid.Column="1"
                        Margin="0,0,10,0"/>
            </Grid>

        </Grid>

        <Grid x:Name="MessageOverlayGrid"
             Background="Gainsboro"
             Margin="5,5,5,5"
             Visibility="{Binding VisibilityVM.MessageOverlayVisibility}"
             
              d:IsHidden="true">
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="MessageTextBlock"
                            Text="{Binding VisibilityVM.MessageText}"
                            HorizontalAlignment="Center"/>
                <Button Style="{StaticResource ButtonStyle}"
                        Content="OK" 
                        HorizontalAlignment="Center"
                        Width="90"
                        Margin="10"
                        Click="MessageOKClicked"/>
            </StackPanel>
        </Grid>
        
        
    </Grid>
</Window>